@{
    ViewBag.Title = "SignIn";
}
@model SigninInput

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Uye Giris</h5>
                <div class="text-info" asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Auth" asp-action="SignIn" method="post"> 
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input type="email" value="admin@admin.com" class="form-control" asp-for="Email" aria-describedby="emailHelp">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input type="password" asp-for="Password" value="Admin12*" class="form-control" id="exampleInputPassword1">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" asp-for="IsRemember" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" asp-for="IsRemember"></label>
                    </div>
                    <button type="submit" class="btn btn-primary">Giris Yap</button>
                </form>
            </div>
        </div>
    </div>
</div>