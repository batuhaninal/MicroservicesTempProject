@{
}

@model List<CourseViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslarim</h5>
                <a asp-area="" asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-3">Kurs Olustur</a>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Kurs Ismi</th>
                            <th>Fiyat</th>
                            <th>Sure</th>
                            <th>Kategorisi</th>
                            <th>Islemler</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img width="72px" src="@item.StockPictureUrl" class="img-thumbnail"></img></td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Feature.Duration</td>
                                <td>@item.Category.Name</td>
                                <td>
                                    <a asp-area="" asp-controller="Courses" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Guncelle</a>
                                    <a asp-area="" asp-controller="Courses" asp-action="Delete" asp-route-id="@item.Id" asp-route-pictureUrl="@item.Picture" class="btn btn-danger">Sil</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Kayitli kurs bulunamadi!
                    </div>
                }

            </div>
        </div>
    </div>
</div>