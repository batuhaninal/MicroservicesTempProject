@{

}
@model List<OrderViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Odeme Gecmisim</h5>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Siparis (Odeme) No</th>
                            <th>Satin Alma Tarihi</th>
                            <th>Detaylar</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CreatedDate.ToShortDateString()</td>
                                <td>
                                    <table class="table table-striped">
                                        <thead>
                                        <tr>
                                            <th>Kurs Ismi</th>
                                            <th>Kurs Fiyat</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var orderItem in item.OrderItems)
                                        {
                                            <tr>
                                                <td>@orderItem.ProductName</td>
                                                <td>@orderItem.Price</td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Satin Alma Gecmisi Bos!</div>
                }
            </div>
        </div>
    </div>
</div>